datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

//Models

model JurisdictionListing {
  id        String   @unique
  title     String
  type JurisdictionType
  createdAt DateTime @default(now())
  updatedAt  DateTime   @updatedAt
}

enum JurisdictionType {
  school
  organization
  state
  country
  corporation
  nation
}

